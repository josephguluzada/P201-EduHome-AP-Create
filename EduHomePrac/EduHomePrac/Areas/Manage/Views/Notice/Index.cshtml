@model List<Notice>
@{ 
    int count = 0;
}

<a asp-action="Create" asp-controller="Notice">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Desc</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Notice notice in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@notice.Desc</td>
                <td>@notice.Date</td>
            </tr>
        }
    </tbody>
</table>